@model WebApp_Model.AdminPortalModels.FacultyModels.Faculty

@{
    Layout = null;
}

<form asp-controller="Faculty" asp-action="EditFaculty" method="post" id="faculty-edit-form">

    <input type="hidden" id="FacultyId" name="FacultyId" value="@Model.FacultyId" />

    <div class="modal-header">
        <h5 class="modal-title">New Faculty</h5>
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
    </div>

    <div class="modal-body">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="FacultyName" class="col-form-label">@Html.DisplayNameFor(model => model.FacultyName)</label>
                <input class="form-control" type="text" name="FacultyName" id="FacultyName" placeholder="@Html.DisplayNameFor(model => model.FacultyName)" value="@Model.FacultyName">
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
